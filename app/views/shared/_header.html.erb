<header class='header'>
  <div class="header-container">
    <div class="top-logo">
      <a href="/">Foodify</a>
    </div>
    <div class='header-right'>
      <% if user_signed_in? %>
        <a href="<%= user_path(current_user) %>">
          <% if current_user.icon.attached? %>
            <%= image_tag rails_blob_path(current_user.icon), class: "icon-header" %>
          <% else %>
            <%= image_tag 'default_icon.jpg', class: "icon-header" %>
          <% end %>
          <%= current_user.name %>
        </a>
        <%= link_to 'ログアウト', destroy_user_session_path, data: { turbo_method: :delete } %>
        <%= link_to "投稿する", new_item_path %>
      <% else %>
        <%= link_to 'ログイン', new_user_session_path %>
        <%= link_to '新規登録', new_user_registration_path %>
      <% end %>
    </ul>
  </div>
</header>