<header class='top-page-header'>
  <div class='search-bar-contents'>
    <div class="top-logo" action="#">
      <a href="/">Foodify</a>
    </div>
  </div>
  <div class='nav'>
    <ul class='lists-right'>
      <% if user_signed_in? %>
      <li class="user_name" >ユーザー名： <%= "#{current_user.name}" %></li>
      <li class="logout" ><%= link_to 'ログアウト', destroy_user_session_path, data: { turbo_method: :delete } %></li>
      <%= link_to "投稿する", new_item_path %>
      <% else %>
      <li class="login"><%= link_to 'ログイン', new_user_session_path %></li>
      <li class="sign-up"><%= link_to '新規登録', new_user_registration_path %></li>
      <% end %>
    </ul>
  </div>
</header>