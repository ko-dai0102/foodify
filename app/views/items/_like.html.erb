<%= turbo_frame_tag item do %>
  <% if user_signed_in? && current_user.likes.find_by(item_id: item.id) %>
    <%= link_to "❤", item_likes_path(item.id),  data: { turbo_method: :delete }, class: "item_likes" %>
  <% else %>
    <%= link_to "♡", item_likes_path(item.id), data: { turbo_method: :post }, class: "item_likes" %>
  <% end %>
<% end %>