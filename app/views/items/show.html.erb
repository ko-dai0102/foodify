<%= render "shared/header" %>
<h3>詳細ページ</h3>
<div class="posted-content">
  <%= image_tag @item.image %><br>
  <table>
    <tr>
      <td>カテゴリー１</td>
      <td><%= link_to @item.category1.name, root_path(category1_id: @item.category1.id) %></td>
    </tr>
    <tr>
      <td>カテゴリー２</td>
      <td><%= link_to @item.category2.name, root_path(category2_id: @item.category2.id) %></td>
    </tr>
    <tr>
      <th>タグ</th>
      <td><%= link_to @item.tags.first&.tag_name, root_path(tag_name: @item.tags.first&.tag_name) %></td>
    </tr>
  </table>
  <%= render partial: "items/like", locals: { item: @item } %>
  <% if user_signed_in? && current_user.id == @item.user_id%>
    <%= link_to '編集', edit_item_path(@item.id)%>
    <%= link_to '削除', item_path(@item.id), data: { turbo_method: :delete }%>
  <% end %>
  <%= link_to @item.user.name, user_path(@item.user.id) %>
</div>
