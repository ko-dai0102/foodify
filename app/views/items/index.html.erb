<%= render "shared/header" %>
<div class='item-contents' id="detailed-search-result-wrapper">
  <%= search_form_for @q, url: search_items_path, html: {id: "detailed-search-form"} do |f| %>
    <div class="search-field">
      <%= f.label :category1_id_in, 'カテゴリ１' %>
      <br>
      <div class="checkbox-category">
        <%= f.collection_check_boxes(:category1_id_in, Category1.all, :id, :name) do |b| %>
          <%= b.label { b.check_box + b.text } %>
        <% end %>
      </div>
    </div>
    <div class="search-field">
      <%= f.label :category2_id_in, 'カテゴリ２' %>
      <br>
      <div class="checkbox-category">
        <%= f.collection_check_boxes(:category2_id_in, Category2.all, :id, :name) do |b| %>
          <%= b.label { b.check_box + b.text } %>
        <% end %>
      </div>
    </div>
    <%= f.submit '検索' %>
  <% end %>
  <h1>
    <% if params[:category1_id].present? %>
      カテゴリ１: <%= Category1.find_by(id: params[:category1_id]).name %>
    <% elsif params[:category2_id].present? %>
      カテゴリ２: <%= Category2.find_by(id: params[:category2_id]).name %>
    <% elsif params[:tag_name].present? %>
      タグ： <%= params[:tag_name] %>
    <% end %>
  </h1>
  <div class='item-lists' id="detailed-search-result">
    <% @items.each do |item| %>
      <div class="posted-item">
        <%= link_to item_path(item.id) do %>
          <%= image_tag item.image %>
        <% end %>
        <%= render partial: "items/like", locals: { item: item } %>
      </div>
    <% end %>
  </div>
</div>