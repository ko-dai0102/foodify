<%= render "shared/header" %>
<div class="contents row">
  <% if current_user && current_user.id == @user.id %>
    <a href="<%= edit_icon_user_path(current_user) %>">
      <% if @user.icon.attached? %>
        <%= image_tag rails_blob_path(@user.icon), class: "icon" %>
      <% else %>
        <%= image_tag 'default_icon.jpg', class: "icon" %>
      <% end %>
    </a>
    <%= link_to @user.name, edit_name_user_path(current_user) %>
    <%= link_to "フォロワー#{@user.followers.count}人", followers_user_path(@user) %>
    <%= link_to "フォロー中#{@user.followings.count}人", followings_user_path(@user) %>
    <%= link_to "アカウント設定", edit_user_path %>
    <%= link_to "いいねした投稿", liked_items_user_path(@user.id) %>
  <% else %>
    <% if @user.icon.attached? %>
      <%= image_tag rails_blob_path(@user.icon), class: "icon" %>
    <% else %>
      <%= image_tag 'default_icon.jpg', class: "icon" %>
    <% end %>
    <%= @user.name %>
    <%= link_to "フォロワー#{@user.followers.count}人", followers_user_path(@user) %>
    <%= link_to "フォロー中#{@user.followings.count}人", followings_user_path(@user) %>
    <%= render partial: "users/follow", locals: { user: @user } %>
  <% end %>
  
  <div class='item-lists' id="detailed-search-result">
    <% @items.each do |item| %>
      <div class="posted-item">
        <%= link_to item_path(item.id) do %>
          <%= image_tag item.image, class: 'posted-image' %>
          <div class="item-counts">
            <%= image_tag 'heart_white.png', class: "white-heart" %>
            <%= item.likes.count %>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>