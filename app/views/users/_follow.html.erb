<% if user_signed_in? %>
  <%= turbo_frame_tag user do %>
    <% if current_user == user %>
    <% elsif user.followed_by?(current_user) %>
      <%=link_to "フォロー中", user_relationships_path(user.id), class: "btn", data: { turbo_method: :delete } %>
    <% else %>
      <%=link_to "フォローする", user_relationships_path(user.id), class: "btm", data: { turbo_method: :post } %>
    <% end %>
  <% end %>
<% else %>
    <%=link_to "フォローする", new_user_session_path, class: "follow" %>
<% end %>