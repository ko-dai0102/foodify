<%= render "shared/header" %>
<h2>ユーザー名編集</h2>

<%= form_for(@user, url: update_name_user_path(@user), method: :patch) do |f| %>
  <%= render 'shared/error_messages', model: f.object %>

  <div class="field">
    <label class="form-text">ニックネーム</label>
    <%= f.text_field :name, id: 'name', placeholder: '例) furima太郎', maxlength: '40' %>
  </div>

  <div class="actions">
    <%= f.submit '変更する' %>
  </div>
<% end %>

<%= link_to '戻る', @user %>